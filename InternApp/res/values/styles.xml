<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">#3a5dae</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        
    </style>
    
    <style name="txt_faq_q" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@+id/faq_page_heading</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>
    
    <style name="txt_faq_a" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@+id/faq_page_heading</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="MyCustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>
    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#3a5dae</item>
         <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Profile_Content_ll" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>  
         <item name="android:paddingTop">5dp</item>   
         <item name="android:paddingBottom">5dp</item> 
         <item name="android:background">#07000000</item>             
    </style>
    
</resources>